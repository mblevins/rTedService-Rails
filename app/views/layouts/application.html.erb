<!DOCTYPE html>
<html>
  <head>
    <title>Silver Fiddle Power Monitoring</title>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <link rel="alternate" type="application/rss+xml" 
      title="RSS" 
      href=<%= day_hist_rss_index_path %>>
  </head>
  <body>
	<div class="container-fluid">
        <div class="row-fluid">
	        <div class="span12">
			    <div class="page-header">
				    <h1>Silver Fiddle Power Data</h2>
				</div>
			</div>
		</div>
        <div class="row-fluid">
			<div class="span2">
				<ul class="nav nav-list">
					<li><%= link_to "Home", home_index_path  %></li>
					<li><%= link_to "Daily Records", power_graph_index_path %></li>
					<li><%= link_to "Raw Data Records", ted_data_path  %></li>
					<li><%= link_to "Daily Records (deprecated)", day_hists_path  %></li>
					<li><%= link_to "Daily Records (deprecated)", day_powers_path  %></li>
					<li><%= link_to "Daily Solar Graph (deprecated)", solar_img_index_path  %></li>
					<li><%= link_to "Daily Water Graph (deprecated)", water_img_index_path   %></li>
					<li><%= link_to "RSS", day_hist_rss_index_path %></li>
					<li><%= link_to "Admin", admin_index_path  %>
					<% if user_signed_in? %>
					    <li><%= link_to "Logout", destroy_user_session_path, :method => :delete  %>
					<% else %>
					    <li><%= link_to "Login", new_user_session_path  %>
					<% end %>
				</ul>
			</div>
    		<div class="span10">
      			<%= yield %>
		    </div>
	    </div>
		<div class="row-fluid">
			<div class="span2"></div>
			<div class="span10">
			    <% if flash[:alert] %>
	    	        <div class="alert alert-error"><%= flash[:alert] %></div>
		        <% end %>
		        <% if flash[:notice] %>
		            <div class="alert alert-info"><%= flash[:notice] %></div>
		        <% end %>
		    </div>
		</div>
	</div>
  </body>
</html>